= form_for(@template) do |f|
  .row
    .large-6.columns
      = f.label :platform
      = f.text_field :platform
      = f.label :database_name
      = f.text_field :database_name
  .row
    .small-9.small-offset-3.columns
      / %input{:type => "submit", :value=>"Add to Templates"}
      = f.submit "Add to Templates"
