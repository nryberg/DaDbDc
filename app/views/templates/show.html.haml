%h3= "#{@template.platform} Template"
%hr
.row
  %h4.subheader.large-12.columns
    Sample SQL
  %p.large-11.large-offset-1.columns
    = raw(@sqltext)
%hr
.row
  %h4.subheader.large-12.columns
    Notes
  %p.large-11.large-offset-1.columns
    = markdown @template.notes

= link_to 'Change template', edit_template_path, class: "button radius"

%form
  = form_tag upload_columns_path do 
    %div.large-6.columns
      = file_field_tag :file, class: 'button right-round fa fa-search'
      = submit_tag "Import", class: 'button right-round fa fa-search'
