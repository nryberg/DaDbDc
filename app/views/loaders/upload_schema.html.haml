%h2 Upload Schema

%form#uploadForm{:action => upload_loaders_path, :method => "POST", :enctype => "multipart/form-data"}
  %input{:name => "authenticity_token", :type => "hidden", :value => form_authenticity_token}
  .row.collapse
    .small-10.columns
      %input.button{:type => "file", :name => "file", :id => "file"}
    .small-2.columns
      %input.button.postfix{:type => "submit", :name => "Upload", :id => "Upload"}
